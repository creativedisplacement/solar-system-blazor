@page "/Planet/{planetName}"
@using SolarSystem.Common.Models.Planet
@inject HttpClient Http
@inject NavigationManager UriHelper
<h1>@_planet.Name</h1>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-5">
            <img src="@_planet.ImageUrl" alt="@_planet.Name" width="300" />
            <div class="col-sm-12 col-md-12">
                <div class="alert-secondary">
                    <h2>Quick facts</h2>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-7">
            <p>@_planet.Introduction</p>
            <p>@_planet.Description</p>
        </div>
    </div>
</div>

@code {
    [Parameter] public string PlanetName { get; set; }
    GetPlanetModel _planet = new GetPlanetModel();
    protected override async Task OnParametersSetAsync()
    {
        _planet = await Http.GetFromJsonAsync<GetPlanetModel>($"api/v1/planet/{PlanetName}");
    }

   
}